<div class="texts-wrapper">
<div class="contents-title text-center" style="padding-top: 3rem">
<h3>POCCHI質問一覧</h3>

<table class="table table-hover table-bordered">

  <thead>
    <tr>
      <th><div class="text-center">問題文</div></th>
      <th><div class="text-center">作成日</div></th>
      <th><div class="text-center">出題予定日</div></th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
  
    <% @quizzes.each do |quiz| %>
      <tr>
        <div class="contents-title text-center"style="padding-top: 1rem">
        <td><%= quiz.title %></td>
        <td><%= quiz.created_at %></td>
        <td><%= quiz.request_answer_on %></td>
        <td><%= link_to '詳細', quiz %></td>
        <td><%= link_to '編集', edit_quiz_path(quiz) %></td>
        <td><%= link_to '削除', quiz, method: :delete, data: { confirm: '削除して良いですか?' } %></td>
      </tr>
    <% end %>
  <div>  
  </tbody>
</table>

<br>

<input type="button" class="btn btn-warning" onclick="location.href='./quizzes/new.html'" value="POCCHI質問新規作成">
</div>
</div>